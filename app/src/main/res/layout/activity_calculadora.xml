<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/calculadora"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="bottom"
    android:background="#FFFFFF"
    android:padding="16dp">

    <!-- Display -->
    <TextView
        android:id="@+id/display"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="#FFFFFF"
        android:gravity="end|center_vertical"
        android:padding="16dp"
        android:text="0"
        android:textSize="32sp"
        android:textColor="#000000" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="*"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="20dp">

        <!-- Fila 1 -->
        <TableRow>

            <Button
                android:id="@+id/btn_borrar"
                android:layout_height="100dp"
                android:layout_marginHorizontal="2dp"
                android:layout_span="2"
                style="@style/botonRojo"
                android:text="BORRAR" />

            <Button android:id="@+id/btn_inv"
                android:text="INV"
                android:layout_marginHorizontal="2dp"
                android:layout_height="100dp"
                style="@style/botonNaraja"
                />

            <Button android:id="@+id/btn_dividir"
                android:text="/"
                android:layout_marginHorizontal="2dp"
                android:layout_height="100dp"
                style="@style/botonNaraja"
                />
        </TableRow>

        <!-- Fila 2 -->
        <TableRow>
            <Button android:id="@+id/btn_7"
                android:text="7"
                android:layout_marginHorizontal="2dp"
                android:layout_height="100dp"
                style="@style/botonAzul"
                />
            <Button android:id="@+id/btn_8"
                android:text="8"
                android:layout_marginHorizontal="2dp"
                android:layout_height="100dp"
                style="@style/botonAzul"
                />
            <Button android:id="@+id/btn_9"
                android:text="9"
                android:layout_marginHorizontal="2dp"
                android:layout_height="100dp"
                style="@style/botonAzul"
                />
            <Button android:id="@+id/btn_multiplicar"
                android:text="x"
                android:layout_marginHorizontal="2dp"
                android:layout_height="100dp"
                style="@style/botonNaraja"
                />
        </TableRow>

        <!-- Fila 3 -->
        <TableRow>
            <Button
                android:id="@+id/btn_4"
                android:layout_marginHorizontal="2dp"
                android:layout_height="100dp"
                style="@style/botonAzul"
                android:text="4"/>
            <Button
                android:id="@+id/btn_5"
                android:layout_marginHorizontal="2dp"
                android:layout_height="100dp"
                style="@style/botonAzul"
                android:text="5"/>
            <Button
                android:id="@+id/btn_6"
                android:layout_marginHorizontal="2dp"
                android:layout_height="100dp"
                style="@style/botonAzul"
                android:text="6"/>
            <Button
                android:id="@+id/btn_restar"
                android:layout_marginHorizontal="2dp"
                android:layout_height="100dp"
                style="@style/botonNaraja"
                android:text="-"/>
        </TableRow>

        <!-- Fila 4 -->
        <TableRow>
            <Button
                android:id="@+id/btn_1"
                android:layout_marginHorizontal="2dp"
                android:layout_height="100dp"
                style="@style/botonAzul"
                android:text="1"/>
            <Button
                android:id="@+id/btn_2"
                android:layout_marginHorizontal="2dp"
                android:layout_height="100dp"
                style="@style/botonAzul"
                android:text="2"/>
            <Button
                android:id="@+id/btn_3"
                android:layout_marginHorizontal="2dp"
                android:layout_height="100dp"
                style="@style/botonAzul"
                android:text="3"/>
            <Button
                android:id="@+id/btn_sumar"
                android:layout_marginHorizontal="2dp"
                android:layout_height="100dp"
                style="@style/botonNaraja"
                android:text="+"/>
        </TableRow>

        <!-- Fila 5 -->
        <TableRow>
            <Button android:id="@+id/btn_0"
                android:layout_span="3"
                android:layout_height="100dp"
                android:layout_marginHorizontal="2dp"
                style="@style/botonAzul"
                android:text="0"/>
            <Button android:id="@+id/btn_igual"
                android:layout_marginHorizontal="2dp"
                android:layout_height="100dp"
                style="@style/botonNaraja"

                android:text="="/>
        </TableRow>
    </TableLayout>

</LinearLayout>
